<%-
  args =  if cluster == 'owens'
            [ "--partition", "quick", "--nodes", "1", "--ntasks-per-node", "1" ]
          else
            ["--gres", "vis", "--nodes", "1", "--ntasks-per-node", "1", "--gpus", "1"]
          end
-%>
---
batch_connect:
  template: vnc
script:
  native:
    <%- args.each do |arg| -%>
    - "<%= arg %>"
    <%- end -%>
